<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_background"
    tools:context=".DetallePelicula">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pelicula_imagen"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/toystory"
            />

        <TextView
            android:id="@+id/tv_nombre_pelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Toy story"
            android:textSize="20sp"
            android:textColor="@color/yellow"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_pelicula_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:text="DescripciÃ³n pelicula"
            android:textSize="14sp"
            android:textColor="@color/yellow"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/yellow"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="40dp"/>
    <Button
        android:id="@+id/buyTickets"
        android:layout_width="237dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black_background"
        android:background="@drawable/round_button"
        android:text="BUY MY TICKETS"
        />

    <TextView
        android:id="@+id/seatLeft"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:text="0 seats available"
        android:gravity="center"
        android:textColor="@color/yellow"
        android:textSize="14sp" />
    <Button
        android:id="@+id/back"
        android:layout_width="237dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black_background"
        android:background="@drawable/round_button"
        android:text="REGRESAR INICIO"
        />


</LinearLayout>